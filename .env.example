# App Configuration
EXPO_PUBLIC_APP_NAME="Iyaya"

# EAS Project (optional)
EXPO_PUBLIC_EAS_PROJECT_ID="your-eas-project-id"

# API Configuration
# Use your computer's network IP instead of localhost for physical devices/emulators
# Get your IP with: ipconfig (Windows) or ifconfig (Mac/Linux)
EXPO_PUBLIC_API_HOST=http://192.168.XXX.XXX:5000
EXPO_PUBLIC_API_URL=http://192.168.XXX.XXX:5000
EXPO_PUBLIC_API_PORT="5000"

# Feature flags
EXPO_PUBLIC_MESSAGES_SOURCE="api"
EXPO_PUBLIC_ALLOW_UNVERIFIED="false"
EXPO_PUBLIC_DEV_BYPASS="true"

# Environment Settings
EXPO_PUBLIC_ENVIRONMENT="development"
EXPO_PUBLIC_VERSION="1.0.0"
ENV="development"
NODE_ENV="development"

# Other
EXPO_DEV_SERVER_LISTEN_ADDRESS="0.0.0.0"
REACT_APP_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Optional API tuning
EXPO_PUBLIC_API_TIMEOUT="30000"
EXPO_PUBLIC_API_EXTENDED_TIMEOUT="60000"
EXPO_PUBLIC_API_MAX_RETRIES="3"
EAS_SKIP_AUTO_FINGERPRINT="1"

# Facebook Authentication (Frontend)
EXPO_PUBLIC_FACEBOOK_APP_ID="your-facebook-app-id"

# Supabase Configuration (Frontend)
EXPO_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
EXPO_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Backend Only - Do NOT expose in frontend
# FACEBOOK_APP_SECRET="your-facebook-app-secret"
# SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Analytics (optional)
EXPO_PUBLIC_ANALYTICS_KEY="your-analytics-key"