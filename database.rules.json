{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "users": {
      "$userId": {
        ".read": "auth != null && (auth.uid === $userId || root.child('admins').child(auth.uid).exists())",
        ".write": "auth != null && (auth.uid === $userId || root.child('admins').child(auth.uid).exists())"
      }
    },

    "conversations": {
      "$conversationId": {
        ".read": "auth != null && (data.child('participants').child(auth.uid).exists() || root.child('admins').child(auth.uid).exists())",
        ".write": "auth != null && (data.child('participants').child(auth.uid).exists() || root.child('admins').child(auth.uid).exists())"
      }
    },

    "messages": {
      "$conversationId": {
        ".read": "auth != null && (root.child('conversations').child($conversationId).child('participants').child(auth.uid).exists() || root.child('admins').child(auth.uid).exists())",
        ".write": "auth != null && (root.child('conversations').child($conversationId).child('participants').child(auth.uid).exists() || root.child('admins').child(auth.uid).exists())"
      }
    },

    "presence": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && (auth.uid === $userId || root.child('admins').child(auth.uid).exists())"
      }
    },

    "typing": {
      "$conversationId": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('conversations').child($conversationId).child('participants').child(auth.uid).exists() || root.child('admins').child(auth.uid).exists())"
      }
    },

    "connections": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "notifications": {
      "$userId": {
        ".read": "auth != null && (auth.uid === $userId || root.child('admins').child(auth.uid).exists())",
        ".write": "auth != null && (auth.uid === $userId || root.child('admins').child(auth.uid).exists())"
      }
    },

    "userStatus": {
      "$userId": {
        ".read": "auth != null",
        ".write": "auth != null && (auth.uid === $userId || root.child('admins').child(auth.uid).exists())"
      }
    },

    "adminPanel": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
    },

    "public": {
      ".read": "auth != null"
    },

    "auditLogs": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
    },

    "settings": {
      ".read": "auth != null && root.child('admins').child(auth.uid).exists()",
      ".write": "auth != null && root.child('admins').child(auth.uid).exists()"
    }
  }
}